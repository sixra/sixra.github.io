---
import { getLangFromUrl, useTranslations } from '@i18n/ui';
import SectionContainer from '@components/sections/SectionContainer.astro';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<SectionContainer id="response-time">
  <h2 class="mb-6 text-3xl font-semibold text-gray-900 md:text-4xl">
    {t('contact.responseTime.title')}
  </h2>
  <p class="text-gray-700">{t('contact.responseTime.paragraph')}</p>
</SectionContainer>
