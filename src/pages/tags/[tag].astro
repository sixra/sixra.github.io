---
import { getAllTags, getPostsByTag, calculateReadingTime } from '@/utils/blog';
import BaseLayout from '@layouts/BaseLayout.astro';
import BlogCard from '@components/BlogCard.astro';

export async function getStaticPaths() {
  const allTags = await getAllTags();

  return allTags.map(({ tag }) => ({
    params: { tag },
    props: { tag },
  }));
}

interface Props {
  tag: string;
}

const { tag } = Astro.props;
const posts = await getPostsByTag(tag);

const postsWithMeta = posts.map((post) => ({
  ...post,
  readingTime: calculateReadingTime(post.body),
}));
---

<BaseLayout
  title={`Posts tagged "${tag}" - Ratko Simidzija`}
  description={`All posts tagged with ${tag}`}
>
  <div class="tag-header animate">
    <a href="/blog" class="back-link">‚Üê Back to Blog</a>
    <h1 class="page-title">Posts tagged "{tag}"</h1>
    <p class="post-count">{posts.length} {posts.length === 1 ? 'post' : 'posts'}</p>
  </div>

  <div class="posts animate">
    {
      postsWithMeta.map((post) => (
        <BlogCard
          title={post.data.title}
          description={post.data.description}
          pubDate={post.data.pubDate}
          slug={post.slug}
          readingTime={post.readingTime}
          tags={post.data.tags}
          image={post.data.image}
        />
      ))
    }
  </div>
</BaseLayout>

<style>
  .tag-header {
    margin-bottom: var(--space-xl);
  }

  .back-link {
    display: inline-block;
    margin-bottom: var(--space-md);
    color: var(--color-text-muted);
    text-decoration: none;
    transition: color var(--transition-fast);
  }

  .back-link:hover {
    color: var(--color-link);
  }

  .page-title {
    font-weight: 600;
    margin-bottom: var(--space-sm);
    color: var(--color-text);
    font-size: var(--font-size-xl);
  }

  .post-count {
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
  }

  .posts {
    display: flex;
    flex-direction: column;
    gap: var(--space-md);
  }
</style>
