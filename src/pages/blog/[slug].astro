---
import { getPublishedPosts, calculateReadingTime, getRelatedPosts } from '@/utils/blog';
import type { CollectionEntry } from 'astro:content';
import { render } from 'astro:content';
import BlogPost from '@layouts/BlogPost.astro';

export async function getStaticPaths() {
  const posts = await getPublishedPosts();

  return posts.map((post) => ({
    params: { slug: post.id },
    props: { post },
  }));
}

interface Props {
  post: CollectionEntry<'blog'>;
}

const { post } = Astro.props;
const { Content } = await render(post);

const readingTime = calculateReadingTime(post.body || '');

const relatedPosts = await getRelatedPosts(post.id, post.data.tags);
---

<BlogPost {...post.data} slug={post.id} readingTime={readingTime} relatedPosts={relatedPosts}>
  <Content />
</BlogPost>
