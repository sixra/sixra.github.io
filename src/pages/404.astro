---
import Layout from '@layouts/Layout.astro';
import Header from '@components/layout/Header.astro';
import Footer from '@components/layout/Footer.astro';
import { getLangFromUrl, useTranslations } from '@i18n/ui';

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<Layout
  title={`${t('meta.about.title')} - ${t('notFound.title')}`}
  description={t('notFound.message')}
  noindex={true}
>
  <Header />
  <main id="main-content" class="bg-gray-50">
    <div class="not-found">
      <h1>{t('notFound.title')}</h1>
      <p class="message">{t('notFound.message')}</p>
      <div class="links">
        <a href="/" class="link-button">{t('notFound.goHome')}</a>
        <a href="/about" class="link-button">{t('notFound.aboutMe')}</a>
      </div>
    </div>
  </main>
  <Footer />
</Layout>

<style>
  .not-found {
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    text-align: center;
    min-height: 50vh;
    padding: var(--space-2xl) 0;
  }

  h1 {
    font-size: 6rem;
    margin-bottom: var(--space-md);
    background: linear-gradient(135deg, var(--color-text) 0%, var(--color-link) 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
  }

  .message {
    font-size: var(--font-size-lg);
    color: var(--color-text-muted);
    margin-bottom: var(--space-xl);
    max-width: 500px;
  }

  .links {
    display: flex;
    gap: var(--space-md);
    flex-wrap: wrap;
    justify-content: center;
  }

  .link-button {
    padding: var(--space-sm) var(--space-lg);
    background-color: var(--color-bg-accent);
    border: 1px solid var(--color-border);
    border-radius: var(--border-radius);
    transition: all var(--transition-fast);
    display: inline-block;
  }

  .link-button:hover {
    border-color: var(--color-link);
    background-color: var(--color-bg-code);
  }

  @media (max-width: 768px) {
    h1 {
      font-size: 4rem;
    }

    .message {
      font-size: var(--font-size-base);
    }
  }
</style>
