---
import { getPublishedPosts } from '@/utils/blog';
import BaseLayout from '@layouts/BaseLayout.astro';
import ArrowCard from '@components/ArrowCard.astro';
import ExperienceItem from '@components/ExperienceItem.astro';
import SectionHeader from '@components/SectionHeader.astro';
import SocialIcon from '@components/SocialIcon.astro';

const posts = (await getPublishedPosts()).slice(0, 3);
---

<BaseLayout
  title="Ratko Simidzija | JavaScript Developer"
  description="JavaScript Developer specializing in React, TypeScript, and modern web development. Currently building e-commerce platforms at ePages. Five years of experience with web applications."
>
  <section class="intro">
    <h1>Ratko Simidzija</h1>
    <p class="headline">JavaScript Developer</p>
    <div class="bio">
      <p>
        Five years ago, I made the switch from Business Management to Web Development, a decision
        that proves to be one of my best moves. Each day brings new coding puzzles to solve, which I
        thoroughly enjoy.
      </p>
      <p>
        Currently working as a JavaScript Developer at ePages, where I primarily use React, Remix,
        and TypeScript. My experience spans Angular, Svelte, Redux, Node.js, and testing frameworks
        like Jest, Cypress, and Playwright, along with build tools including Webpack and Gulp. In my
        free time, I enjoy building projects with Astro and diving deeper into Web Accessibility
        standards - always eager to learn and grow as a developer.
      </p>
    </div>
    <div class="quick-links">
      <SocialIcon platform="github" href="https://github.com/sixra" />
      <SocialIcon platform="linkedin" href="https://www.linkedin.com/in/ratkosimidzija" />
      <a href="mailto:comm.sr@tuta.com" class="email-link" aria-label="Email">
        <svg
          xmlns="http://www.w3.org/2000/svg"
          width="20"
          height="20"
          viewBox="0 0 24 24"
          fill="none"
          stroke="currentColor"
          stroke-width="2"
          stroke-linecap="round"
          stroke-linejoin="round"
        >
          <rect x="2" y="4" width="20" height="16" rx="2"></rect>
          <path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"></path>
        </svg>
      </a>
    </div>
  </section>

  <section class="work-experience">
    <h2 id="work-experience">Work Experience</h2>
    <ul class="experience-list list-reset flex-column">
      <ExperienceItem
        type="work"
        organization="ePages"
        position="Javascript Developer"
        dateRange="Jan 2024 - Present"
        highlights={[
          'Develop features for customer storefronts and the visual page editor using React 19, Remix, Redux, and TypeScript across storefront and admin platforms',
          'Build and maintain Commerce Cockpit, a merchant admin platform with 50+ views for managing products, orders, and customers',
          'Write unit tests with Jest and E2E tests with Cypress and Playwright to ensure code quality across both platforms',
          'Work within a monorepo architecture managing multiple interconnected packages and shared component libraries',
          'Work with design and backend teams to deliver features in two-week sprints',
        ]}
      />
      <ExperienceItem
        type="work"
        organization="FxPro"
        position="Frontend Developer"
        dateRange="Feb 2022 - Oct 2023"
        highlights={[
          'Worked on the main FxPro trading platform using Angular 11, TypeScript, and Svelte for interactive components and features',
          'Created landing pages and marketing microsites with Gulp build workflows, featuring responsive designs and animations',
          'Built email templates using EJS for multi-locale campaigns supporting multiple languages and regulatory requirements',
          'Developed financial calculators and interactive trading tools integrated with Highcharts for data visualization',
          'Worked on banking platform applications (BankPro, BnkPro) using Angular 9 and Bootstrap for the user interface',
        ]}
      />
    </ul>
  </section>

  <section class="education">
    <h2 id="education">Education</h2>
    <ul class="experience-list list-reset flex-column">
      <ExperienceItem
        type="education"
        organization="DCI Digital Career Institute"
        position="Full Stack Web Developer"
        dateRange="Nov 2020 - Dec 2021"
        highlights={[
          'HTML, CSS, and responsive web design',
          'Modern JavaScript development with React, Express.js, and Node.js',
          'Git version control and GitHub team workflow',
          'Advanced database development with MongoDB and Mongoose',
        ]}
      />
      <ExperienceItem
        type="education"
        organization="MBS Business School"
        position="Bachelor of Business Administration"
        dateRange="2012 - 2016"
      />
    </ul>
  </section>

  {
    posts.length > 0 && (
      <section class="recent-posts">
        <SectionHeader title="Recent Posts" href="/blog" linkText="View all â†’" />
        <ul class="posts-list list-reset flex-column">
          {posts.map((post) => (
            <li>
              <ArrowCard
                title={post.data.title}
                description={post.data.description}
                slug={post.slug}
              />
            </li>
          ))}
        </ul>
      </section>
    )
  }
</BaseLayout>

<style>
  .intro {
    margin-bottom: var(--space-xl);
  }

  .intro h1 {
    font-size: var(--font-size-2xl);
    font-weight: 600;
    margin-bottom: var(--space-xs);
    color: var(--color-text);
  }

  .headline {
    font-size: var(--font-size-base);
    color: var(--color-link);
    margin-bottom: var(--space-md);
  }

  .bio {
    color: var(--color-text);
    line-height: 1.7;
    max-width: var(--content-width);
  }

  .bio p {
    margin-bottom: var(--space-md);
  }

  .quick-links {
    display: flex;
    gap: var(--space-md);
    margin-top: var(--space-lg);
  }

  .email-link {
    display: flex;
    align-items: center;
    justify-content: center;
    width: var(--icon-size);
    height: var(--icon-size);
    border-radius: 50%;
    transition: all var(--transition-fast);
    color: var(--color-text-muted);
  }

  .email-link:hover {
    color: var(--color-link);
    background-color: var(--color-bg-accent);
  }

  .posts-list {
    gap: var(--space-sm);
  }

  .work-experience,
  .education {
    margin-bottom: var(--space-xl);
  }

  .work-experience h2,
  .education h2 {
    margin-bottom: var(--space-lg);
    font-size: var(--font-size-xl);
  }

  .experience-list {
    gap: var(--space-sm);
  }

  @media (max-width: 768px) {
    .intro h1 {
      font-size: 1.75rem;
    }
  }
</style>
