---
import type { CollectionEntry } from 'astro:content';
import BaseHead from '@components/BaseHead.astro';
import Header from '@components/Header.astro';
import Footer from '@components/Footer.astro';
import FormattedDate from '@components/FormattedDate.astro';
import TagList from '@components/TagList.astro';
import RelatedPosts from '@components/RelatedPosts.astro';
import AuthorBio from '@components/AuthorBio.astro';
import '@styles/global.css';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  updatedDate?: Date;
  image?: string;
  readingTime?: number;
  tags?: string[];
  relatedPosts?: CollectionEntry<'blog'>[];
}

const { title, description, pubDate, updatedDate, image, readingTime, tags, relatedPosts } =
  Astro.props;
const publishedTime = pubDate.toISOString();
const modifiedTime = updatedDate?.toISOString();
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead
      title={title}
      description={description}
      image={image}
      publishedTime={publishedTime}
      modifiedTime={modifiedTime}
      type="article"
    />
  </head>
  <body>
    <a href="#main-content" class="skip-link">Skip to main content</a>
    <Header />
    <main id="main-content" class="container">
      <article>
        {
          image && (
            <div class="featured-image animate">
              <img src={image} alt={title} loading="lazy" />
            </div>
          )
        }
        <div class="post-meta animate">
          <div class="meta-line">
            <FormattedDate date={pubDate} />
            {
              readingTime && (
                <>
                  <span class="separator">•</span>
                  <span>{readingTime} min read</span>
                </>
              )
            }
            {
              updatedDate && (
                <>
                  <span class="separator">•</span>
                  <span>
                    Updated: <FormattedDate date={updatedDate} />
                  </span>
                </>
              )
            }
          </div>
        </div>
        <header class="post-header animate">
          <h1>{title}</h1>
        </header>
        {
          tags && tags.length > 0 && (
            <div class="post-tags animate">
              <TagList tags={tags} />
            </div>
          )
        }
        <div class="prose animate">
          <slot />
        </div>
        <AuthorBio />
        {relatedPosts && relatedPosts.length > 0 && <RelatedPosts posts={relatedPosts} />}
      </article>
    </main>
    <Footer />
    <div
      class="copy-toast"
      id="globalCopyToast"
      role="status"
      aria-live="polite"
      aria-atomic="true"
    >
      Link copied to clipboard!
    </div>
  </body>
</html>

<style>
  article {
    margin-bottom: var(--space-lg);
  }

  .featured-image {
    margin-bottom: var(--space-lg);
  }

  .featured-image img {
    width: 100%;
    height: auto;
    max-height: 400px;
    object-fit: cover;
    border-radius: 8px;
  }

  .post-meta {
    margin-bottom: var(--space-xs);
  }

  .meta-line {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--color-text-muted);
    font-size: 0.875rem;
  }

  .separator {
    color: var(--color-text-muted);
  }

  .post-header {
    margin-bottom: var(--space-md);
  }

  .post-header h1 {
    margin-bottom: 0;
    font-size: 2rem;
    font-weight: 600;
  }

  .post-tags {
    margin-bottom: var(--space-lg);
  }

  .prose {
    max-width: 100%;
  }

  .prose :global(h2) {
    margin-top: var(--space-xl);
    margin-bottom: var(--space-md);
    font-size: 1.5rem;
  }

  .prose :global(h3) {
    margin-top: var(--space-lg);
    margin-bottom: var(--space-sm);
    font-size: 1.25rem;
  }

  .prose :global(img) {
    margin: var(--space-lg) 0;
  }

  .prose :global(a) {
    text-decoration: underline;
    text-underline-offset: 2px;
  }

  @media (max-width: 768px) {
    .post-header h1 {
      font-size: 1.75rem;
    }

    .prose :global(h2) {
      font-size: 1.375rem;
    }

    .prose :global(h3) {
      font-size: 1.125rem;
    }
  }
</style>
