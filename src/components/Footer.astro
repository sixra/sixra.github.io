---
import SocialIcon from '@components/SocialIcon.astro';

const currentYear = new Date().getFullYear();
---

<footer>
  <div class="container">
    <div class="footer-content">
      <div class="social-links">
        <SocialIcon platform="github" href="https://github.com/sixra" />
        <SocialIcon platform="linkedin" href="https://www.linkedin.com/in/ratkosimidzija" />
        <SocialIcon platform="twitter" href="https://x.com/sixra01" />
        <SocialIcon platform="rss" href="/rss.xml" />
      </div>
      <div class="copyright">
        <p>&copy; {currentYear} Ratko Simidzija. All rights reserved.</p>
      </div>
    </div>
  </div>
</footer>

<style>
  footer {
    padding: var(--space-xl) 0;
    border-top: 1px solid var(--color-border);
  }

  .footer-content {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: var(--space-md);
  }

  .social-links {
    display: flex;
    gap: var(--space-md);
  }

  .copyright {
    text-align: center;
  }

  .copyright p {
    color: var(--color-text-muted);
    font-size: var(--font-size-sm);
    margin: 0;
  }
</style>
