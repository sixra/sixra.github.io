---
interface Props {
  title: string;
  description: string;
  canonicalURL?: string;
  image?: string;
  type?: 'website' | 'article';
}

const {
  title,
  description,
  canonicalURL,
  image = '/sr-logo-og.png',
  type = 'website',
} = Astro.props;

const currentLocale = Astro.currentLocale || 'en';
const siteUrl = Astro.site?.toString().replace(/\/$/, '') || 'https://sixra.dev';
const fullCanonicalURL = canonicalURL
  ? new URL(canonicalURL, siteUrl).toString()
  : `${siteUrl}${Astro.url.pathname}`;
const fullImageURL = new URL(image, siteUrl).toString();

// Map Astro locales to Open Graph locale codes
const getOgLocale = (locale: string): string => {
  const localeMap: Record<string, string> = {
    en: 'en_US',
    'sr-latn': 'sr_RS',
    sr: 'sr_RS',
  };
  return localeMap[locale] || 'en_US';
};

// Get the base path without locale prefix
const currentPath = Astro.url.pathname.replace(/^\/(sr-latn|sr)\//, '/');

// Generate hreflang URLs for all locales manually
const alternateURLs = [
  { locale: 'en', url: `${siteUrl}${currentPath}` },
  { locale: 'sr-latn', url: `${siteUrl}/sr-latn${currentPath}` },
  { locale: 'sr', url: `${siteUrl}/sr${currentPath}` },
];
---

<!-- Primary Meta Tags -->
<title>{title}</title>
<meta name="title" content={title} />
<meta name="description" content={description} />
<link rel="canonical" href={fullCanonicalURL} />

<!-- Hreflang Tags for Multilingual SEO -->
{alternateURLs.map(({ locale, url }) => <link rel="alternate" hreflang={locale} href={url} />)}
<link rel="alternate" hreflang="x-default" href={alternateURLs[0].url} />

<!-- Open Graph / Facebook -->
<meta property="og:type" content={type} />
<meta property="og:url" content={fullCanonicalURL} />
<meta property="og:title" content={title} />
<meta property="og:description" content={description} />
<meta property="og:image" content={fullImageURL} />
<meta property="og:image:secure_url" content={fullImageURL} />
<meta property="og:image:type" content="image/png" />
<meta property="og:image:width" content="1200" />
<meta property="og:image:height" content="630" />
<meta property="og:image:alt" content={title} />
<meta property="og:locale" content={getOgLocale(currentLocale)} />
<meta property="og:site_name" content="Ratko Simidzija" />
{
  alternateURLs
    .filter(({ locale }) => locale !== currentLocale)
    .map(({ locale }) => <meta property="og:locale:alternate" content={getOgLocale(locale)} />)
}

<!-- Twitter / X -->
<meta name="twitter:card" content="summary_large_image" />
<meta name="twitter:url" content={fullCanonicalURL} />
<meta name="twitter:title" content={title} />
<meta name="twitter:description" content={description} />
<meta name="twitter:image" content={fullImageURL} />
<meta name="twitter:image:alt" content={title} />
<meta name="twitter:creator" content="@sixra01" />
<meta name="twitter:site" content="@sixra01" />
