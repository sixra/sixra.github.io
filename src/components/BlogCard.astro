---
import FormattedDate from './FormattedDate.astro';
import TagList from './TagList.astro';

interface Props {
  title: string;
  description: string;
  pubDate: Date;
  slug: string;
  readingTime?: number;
  tags?: string[];
  image?: string;
}

const { title, description, pubDate, slug, readingTime, tags, image } = Astro.props;
---

<article class="blog-card card">
  <a href={`/blog/${slug}`} class="card-link">
    {image && <img src={image} alt={title} class="card-image" />}
    <h3>{title}</h3>
    <p class="description">{description}</p>
    {
      tags && tags.length > 0 && (
        <div class="card-tags">
          <TagList tags={tags} />
        </div>
      )
    }
    <div class="card-footer">
      <FormattedDate date={pubDate} />
      {
        readingTime && (
          <>
            <span class="separator">â€¢</span>
            <span class="reading-time">{readingTime} min read</span>
          </>
        )
      }
    </div>
  </a>
</article>

<style>
  .blog-card {
    margin-bottom: var(--space-md);
    padding: var(--space-sm) var(--space-md);
  }

  .card-link {
    display: block;
    color: inherit;
  }

  .card-link:hover {
    color: inherit;
  }

  .card-image {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 8px;
    margin-bottom: var(--space-md);
  }

  h3 {
    margin-bottom: var(--space-sm);
    color: var(--color-text);
    transition: color var(--transition-fast);
  }

  .card-link:hover h3 {
    color: var(--color-link);
  }

  .description {
    color: var(--color-text-muted);
    margin-bottom: var(--space-sm);
    line-height: 1.5;
  }

  .card-tags {
    margin-bottom: var(--space-sm);
  }

  .card-footer {
    display: flex;
    align-items: center;
    gap: var(--space-xs);
    color: var(--color-text-muted);
    font-size: var(--font-size-xs);
  }

  .separator {
    color: var(--color-text-muted);
  }

  .reading-time {
    color: var(--color-text-muted);
  }
</style>
